[user]
  useConfigOnly = true
[push]
  default = simple
[color]
  ui = true
[core]
  editor = vim
  excludesfile = /Users/juhwon/.gitignore_global
  ui = true
[diff]
  compactionHeuristic = true
[core]
  pager = diff-highlight | less -r
[alias]
  undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"

